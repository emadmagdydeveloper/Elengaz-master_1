<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.SemiColon.Hmt.elengaz.Activities.Office_Detail_Activity"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="260dp">
        <android.support.design.widget.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="112dp"
            android:theme="@style/ThemeOverlay.AppCompat.Light"
            android:layout_alignParentTop="true"
            >

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:contentInsetStart="0dp"
                app:contentInsetLeft="0dp"
                app:contentInsetRight="0dp"
                app:contentInsetEnd="0dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    >
                    <ImageView
                        android:id="@+id/back"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/back_arrow_white"
                        android:padding="9dp"
                        />
                    <TextView
                        android:id="@+id/office_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="office name"
                        android:textSize="20dp"
                        android:textColor="#fff"
                        />
                </RelativeLayout>


            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>
        <TextView
            android:id="@+id/tv"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal|bottom"
            android:background="@drawable/tv_office_detail_bg"
            android:layout_marginTop="70dp"
            android:layout_centerHorizontal="true"

            />
        <TextView
            android:id="@+id/name"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="محمد السيد"
            android:textColor="#000"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_below="@+id/tv"
            android:layout_centerHorizontal="true"

            />

        <TextView
            android:id="@+id/country"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="الرياض"
            android:textColor="#616161"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_below="@+id/name"
            android:layout_centerHorizontal="true"



            />
        <Button
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_below="@+id/country"
            android:layout_centerHorizontal="true"
            android:background="@drawable/backsearch2"
            android:text="اتصال"
            android:textColor="#fff"
            android:textSize="18sp"
            android:layout_marginTop="15dp"

            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#bdbdbd"
            android:layout_alignParentBottom="true"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/appBar"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="تم طلب"
                android:textSize="14sp"
                android:textColor="#000"
                android:layout_gravity="center_horizontal"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="150"
                android:textSize="14sp"
                android:textColor="#000"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="خدمه"
                android:textSize="14sp"
                android:textColor="#000"
                android:layout_gravity="center_horizontal"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/appBar"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="تم إنجاز"
                android:textSize="14sp"
                android:textColor="#000"
                android:layout_gravity="center_horizontal"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="150"
                android:textSize="14sp"
                android:textColor="#000"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="خدمه"
                android:textSize="14sp"
                android:textColor="#000"
                android:layout_gravity="center_horizontal"
                />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layoutDirection="ltr"
        >
        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/rate_icon"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/rate_icon"
                /> <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/rate_icon"
            /> <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/rate_icon"
            /> <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/rate_icon"
            />
            <ProgressBar
                android:layout_width="130dp"
                android:layout_height="20dp"
                style="@android:style/Widget.Holo.ProgressBar.Horizontal"
                android:progressTint="@color/colorPrimary"
                android:progressBackgroundTint="#616161"
                android:progress="80"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
        <LinearLayout

            android:id="@+id/l2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_below="@+id/l1"
            >


            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/rate_icon"
                /> <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/rate_icon"
            /> <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/rate_icon"
            /> <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/rate_icon"
            />
            <ProgressBar
                android:layout_width="130dp"
                android:layout_height="20dp"
                style="@android:style/Widget.Holo.ProgressBar.Horizontal"
                android:progressTint="@color/colorPrimary"
                android:progressBackgroundTint="#616161"
                android:progress="20"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"

                />
        </LinearLayout>
        <LinearLayout

            android:id="@+id/l3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_below="@+id/l2"
            >



            <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/rate_icon"
            /> <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/rate_icon"
            /> <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/rate_icon"
            />
            <ProgressBar
                android:layout_width="130dp"
                android:layout_height="20dp"
                style="@android:style/Widget.Holo.ProgressBar.Horizontal"
                android:progressTint="@color/colorPrimary"
                android:progressBackgroundTint="#616161"
                android:progress="20"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"

                />
        </LinearLayout>
        <LinearLayout

            android:id="@+id/l4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_below="@+id/l3"
            >



           <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/rate_icon"
            /> <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/rate_icon"
            />
            <ProgressBar
                android:layout_width="130dp"
                android:layout_height="20dp"
                style="@android:style/Widget.Holo.ProgressBar.Horizontal"
                android:progressTint="@color/colorPrimary"
                android:progressBackgroundTint="#616161"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"

                />
        </LinearLayout>
        <LinearLayout

            android:id="@+id/l5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_below="@+id/l4"
            >



           <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/rate_icon"
            />
            <ProgressBar
                android:layout_width="130dp"
                android:layout_height="20dp"
                style="@android:style/Widget.Holo.ProgressBar.Horizontal"
                android:progressTint="@color/colorPrimary"
                android:progressBackgroundTint="#616161"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"

                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/l5"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="من 5"
                android:textSize="17sp"
                android:textColor="#616161"
                android:layout_marginLeft="20dp"
                android:layout_alignParentLeft="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25 تقيم"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentLeft="true"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.3"
                android:textSize="30sp"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                />

        </LinearLayout>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recView_comments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        >

    </android.support.v7.widget.RecyclerView>
</LinearLayout>
</ScrollView>